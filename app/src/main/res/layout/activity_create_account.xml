<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createAccountRL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateAccount">

    <LinearLayout
        android:id="@+id/createAccount_backgroundIV"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/top_background"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"></LinearLayout>

    <TextView
        android:id="@+id/createAccount_headerTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_account"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/createAccount_backgroundIV"
        tools:ignore="MissingConstraints" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        app:cardElevation="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createAccount_headerTV">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="540dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/personal_information"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/createAccount_firstNameET"
                android:layout_width="290dp"
                android:layout_height="58dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:autofillHints="InputNom"
                android:drawableStart="@drawable/ic_edit"
                android:hint="@string/FisrtName"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/createAccount_lastNameET"
                android:layout_width="290dp"
                android:layout_height="58dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:autofillHints="InputNom"
                android:drawableStart="@drawable/ic_edit"
                android:hint="@string/editText_SecondName"
                android:inputType="text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/createAccount_mailET"
                android:layout_width="290dp"
                android:layout_height="58dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:autofillHints="InputMail"
                android:drawableStart="@drawable/ic_mail"

                android:hint="@string/EditTextMail"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/createAccount_cityET"
                android:layout_width="290dp"
                android:layout_height="58dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:autofillHints="InputCommune"
                android:drawableStart="@drawable/ic_city"
                android:hint="@string/Commune"
                android:inputType="text"
                android:textColorHint="#546E7A" />

            <EditText
                android:id="@+id/createAccount_passwordET"
                android:layout_width="290dp"
                android:layout_height="58dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:autofillHints="InputMdp"
                android:drawableStart="@drawable/ic_password"
                android:ems="10"
                android:hint="@string/EditText_Mdp"

                android:inputType="textPassword"
                android:textColorHint="#546E7A" />

            <EditText
                android:id="@+id/createAccount_verifyPasswordET"
                android:layout_width="290dp"
                android:layout_height="58dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:autofillHints="InputMdp"
                android:drawableStart="@drawable/ic_lock"
                android:ems="10"
                android:hint="@string/EditText_MdpVerify"

                android:inputType="textPassword"
                android:textColorHint="#546E7A" />

            <Button
                android:id="@+id/createAccount_alreadySignedUpBTN"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/ic_redirection_arrow"
                android:gravity="center_vertical"
                android:text="@string/Btn_AlreadyHaveAccount"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/createAccount_signUpBTN"
        android:layout_width="311dp"
        android:layout_height="74dp"
        android:text="@string/Btn_Validation"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.171" />

</androidx.constraintlayout.widget.ConstraintLayout>


