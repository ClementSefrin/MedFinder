<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/cardBackgroundColor"
        android:padding="5dp">

        <TextView
            android:id="@+id/nomMedicamentTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom du medicament"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/codeCisTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nomMedicamentTV"
            android:text="Code cis"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/codeCisTV"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/pharmacieTV"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:text="Pharmacie"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/dateSaisieTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/pharmacieTV"
                android:layout_alignParentEnd="true"
                android:text="01/01/01"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>